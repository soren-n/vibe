{
  "branches": ["main"],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits"
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits"
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": true
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "node scripts/sync_versions.js ${nextRelease.version} && npm run build && mkdir -p vscode-extension/bundled && cp dist/src/cli.js vscode-extension/bundled/mcp-server.js && cp -r data vscode-extension/data && cd vscode-extension && npm ci && npm run compile && npm run package",
        "publishCmd": "cd vscode-extension && npm run publish"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": ["dist/*", "vscode-extension/*.vsix"]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "package.json",
          "package-lock.json",
          "vscode-extension/package.json",
          "vscode-extension/package-lock.json"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}

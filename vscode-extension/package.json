{
  "name": "vibe-workflows",
  "displayName": "Vibe Workflows",
  "description": "Self-contained workflow orchestration for development tasks - zero external dependencies",
  "version": "0.6.0",
  "publisher": "soren-n",
  "icon": "images/vibe-icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/soren-n/vibe"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Snippets"
  ],
  "keywords": [
    "workflow",
    "automation",
    "productivity",
    "mcp",
    "model-context-protocol"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vibe.startWorkflow",
        "title": "Start Workflow",
        "category": "Vibe"
      },
      {
        "command": "vibe.listWorkflows",
        "title": "List Available Workflows",
        "category": "Vibe"
      },
      {
        "command": "vibe.openWorkflowGuide",
        "title": "Open Workflow Guide",
        "category": "Vibe"
      }
    ],
    "configuration": {
      "title": "Vibe Workflows",
      "properties": {
        "vibe.mcpServerPath": {
          "type": "string",
          "default": "",
          "description": "Path to the Vibe MCP server executable"
        },
        "vibe.autoStartMcpServer": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start MCP server when extension activates"
        },
        "vibe.defaultWorkflowCategory": {
          "type": "string",
          "default": "core",
          "description": "Default workflow category to show",
          "enum": [
            "core",
            "python",
            "frontend",
            "documentation",
            "development",
            "session"
          ]
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "vibeWorkflows",
          "name": "Vibe Workflows",
          "when": "workspaceHasVibeConfig"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "vibeWorkflows",
        "contents": "Welcome to Vibe Workflows!\n\n[Start Workflow](command:vibe.startWorkflow)\n[Browse Workflows](command:vibe.listWorkflows)\n\nTo get started, open a workspace with a .vibe.yaml file or run a workflow command."
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "npx @vscode/vsce package --no-git-tag-version",
    "publish": "npx @vscode/vsce publish --no-git-tag-version",
    "clean": "rm -rf out && rm -f *.vsix",
    "rebuild": "npm run clean && npm run compile",
    "version": "npm version --no-git-tag-version"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^2.15.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.2",
    "@types/js-yaml": "^4.0.9",
    "js-yaml": "^4.1.0"
  }
}

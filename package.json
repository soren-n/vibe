{
  "name": "vibe-workflow",
  "version": "0.6.0",
  "description": "Intelligent workflow orchestrator for TypeScript development with natural language prompts",
  "main": "dist/src/index.js",
  "bin": {
    "vibe": "dist/src/cli.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-data",
    "build:watch": "tsc --watch",
    "copy-data": "cp -r data dist/data 2>/dev/null || true",
    "dev": "tsx src/cli.ts",
    "cli": "node dist/src/cli.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testNamePattern=\"integration|Integration\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write src tests",
    "format:check": "prettier --check src tests",
    "type-check": "tsc --noEmit",
    "quality": "npm run lint && npm run format:check && npm run type-check && npm run test",
    "quality:release": "npm run format:check && npm run type-check && npm run test",
    "quality:fix": "npm run lint:fix && npm run format && npm run type-check && npm run test",
    "clean": "rm -rf dist coverage",
    "prepare": "husky install",
    "prepack": "npm run build",
    "parity-check": "npx tsx scripts/cli-parity-validator.ts",
    "parity": "npx tsx scripts/parity-tracker.ts",
    "migration:setup": "npm run build && npm run test && npm run parity-check"
  },
  "dependencies": {
    "chokidar": "^4.0.1",
    "commander": "^12.0.0",
    "js-yaml": "^4.1.0",
    "jsonschema": "^1.4.1"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.9.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "semantic-release": "^22.0.12",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.39.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/soren-n/vibe.git"
  },
  "keywords": [
    "workflow",
    "orchestration",
    "cli",
    "development",
    "automation"
  ],
  "author": "SÃ¸ren Nielsen",
  "license": "MIT",
  "files": [
    "dist/",
    "data/",
    "README.md",
    "LICENSE"
  ],
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/types/**/*"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}

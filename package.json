{
  "name": "vibe-guide",
  "version": "1.3.1",
  "description": "Workflow orchestrator and MCP server for development automation and guidance.",
  "main": "dist/src/cli.js",
  "bin": {
    "vibe": "dist/src/cli.js"
  },
  "scripts": {
    "build": "npm run clean && tsc --project tsconfig.json && npm run copy-data && npm run copy-package",
    "build:fast": "tsc && npm run copy-data && npm run copy-package",
    "build:watch": "tsc --watch",
    "copy-data": "cp -r data dist/data 2>/dev/null || true",
    "copy-package": "cp package.json dist/package.json",
    "dev": "tsx src/cli.ts",
    "cli": "node dist/src/cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:integration": "vitest run --reporter=verbose tests/**/*integration*",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write src tests",
    "format:check": "prettier --check src tests",
    "type-check": "tsc --noEmit",
    "deps:check": "knip --reporter compact",
    "deps:check:json": "knip --reporter json",
    "deps:fix": "knip --fix",
    "quality": "npm run lint && npm run format:check && npm run type-check && npm run test && npm run deps:check",
    "quality:release": "npm run format:check && npm run type-check && npm run test",
    "quality:fix": "npm run lint:fix && npm run format && npm run type-check && npm run test",
    "clean": "rm -rf dist coverage",
    "prepare": "husky install",
    "prepack": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.2",
    "commander": "^12.0.0",
    "js-yaml": "^4.1.0",
    "nanoid": "^5.1.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/js-yaml": "^4.0.9",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "@types/node": "^22.9.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "knip": "^5.62.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "semantic-release": "^22.0.12",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.39.1",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/soren-n/vibe-mcp.git"
  },
  "keywords": [
    "workflow",
    "orchestration",
    "cli",
    "development",
    "automation",
    "mcp",
    "model-context-protocol"
  ],
  "author": "Soren Norbaek",
  "license": "MIT",
  "files": [
    "dist/src/",
    "dist/data/",
    "dist/package.json",
    "README.md",
    "LICENSE"
  ],
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ],
    "package.json": [
      "bash -c 'knip --include dependencies --reporter compact --no-exit-code'"
    ]
  }
}
